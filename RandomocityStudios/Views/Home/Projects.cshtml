@model RandomocityStudios.Models.Project

@{
    ViewData["Title"] = "Projects";
}

<div class="row">
    <div class="col-md-12 text-center">
        <h2>@ViewData["Title"]</h2>
    </div>
</div>

<div class="col-md-12 row">
    <div class="text-center">

        @foreach (Project project in ViewData["Projects"] as List<Project>)
        {
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-6">

                        <img src="@project.ImagePath" width="100%" />
                    </div>

                    <div class="col-md-6 text-left pull-left">
                        @if (project.Url != null && project.Url.Length > 0)
                        {
                            <a href="@project.Url" target="_blank"><h4>@project.Title</h4> </a>
                        }
                        else
                        {
                            <h4>@project.Title</h4>
                        }

                        <p><b>Description:</b> @project.Description</p>
                        <p><b>Technologies:</b> @project.Tech</p>
                        <p><a href="@project.Source" target="_blank"><b>Source code</b></a></p>
                    </div>
                </div>
            </div>
        }
    </div>
    <br />
</div>
