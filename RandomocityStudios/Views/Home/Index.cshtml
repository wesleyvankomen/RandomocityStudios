@{
    ViewData["Title"] = "Randomocity Studios";

    List<string> pictures = ViewData["Pictures"] as List<string>;
}

@section metatags
{
    <meta name="description" content="Randomocity Studios serves as a living portfolio and resume for Wesley Van Komen." />
    <meta name="keywords" content="randomocity studios, randomocity, studios, wesley van komen, wesley, van komen, software engineer, software development, software, resume, portfolio, .net, c#, javascript, programming, coding, hacking" />
}

@section scripts
{
        <script rel="stylesheet" href="~/css/comparison.css" ></script>
}

<div class="col-sm-12 col-md-12 col-lg-12 styled-row large-top-margin" >
    <h1>@ViewData["Title"]</h1>
</div>

<div class="col-sm-12 col-md-12 col-lg-12 styled-row small-top-margin" style="padding: 0px;">

    <div>
        <h3 class="typography small-top-padding medium-side-margin">This is the part where I'm supposed to tell you about why I'm a great developer that you want working for your team. Please refer to the table below for a quick comparison of how Wesley stacks up to other candidates.</h3>
    </div>

    <partial name="~/Views/Shared/_ComparisonPartial.cshtml" />

</div>

<div class="col-sm-12 col-md-12 col-lg-12 styled-row small-top-margin" style="padding: 0px;">

    <div>
        <h3 class="typography small-top-padding medium-side-margin">I have a strong background in core web technologies (HTML, CSS, JavaScript) and Microsoft Technologies (Azure, C#, .Net, T-SQL, TypeScript). Please visit the "Projects" page to view examples of things I have built. </h3>
    </div>

</div>

<div class="col-sm-12 col-md-12 col-lg-12 styled-row small-top-margin" style="padding: 0px;">

    <div>
        <h3 class="typography small-top-padding medium-side-margin">Still not sure? Please take a moment to enjoy these AI Generated corgis.</h3>

    </div>

        <div id="corgis" class="carousel slide green-border" data-interval="2500" data-ride="carousel"  style="transform: scale(0.9);">

@*            <!-- Indicators -->
            <ul class="carousel-indicators">
            <li data-target="#corgis" data-slide-to="0" class="active"></li>
            <li data-target="#corgis" data-slide-to="1"></li>
            <li data-target="#corgis" data-slide-to="2"></li>
            </ul>*@

            <!-- The slideshow -->
            <div class="carousel-inner">
                @for (int i = 0; i < pictures.Count(); i++)
                 {
                    if (i == 0)
                    {
                    <div class="item active">
                        <a href="@pictures[i]" data-fancybox="pictures" data-options='{"loop": true}' data-caption="AI Generated Corgi">
                            <img src="@pictures[i]" style="width:100%;">
                        </a>
                    </div>
                    }
                    else
                    {
                    <div class="item">
                        <a href="@pictures[i]" data-fancybox="pictures" data-options='{"loop": true}' data-caption="AI Generated Corgi">
                            <img src="@pictures[i]" style="width:100%;">
                        </a>
                    </div>
                    }
                    }
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#corgis" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#corgis" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>

        </div>

    </div>